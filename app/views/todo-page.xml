<Page loaded="load">
    <Page.ActionBar>
        <ActionBar title="App Todo Example">
            <ActionBar.actionItems>
                <ActionItem tap="onS">
                    <ActionItem tap="modalNuevoItem"
                                ios.systemIcon="9" ios.position="left"
                                android.systemIcon="ic_menu_add" android.position="actionBar"/>
                    <ActionItem tap="modalBorrarTodo"
                                ios.systemIcon="9" ios.position="left"
                                android.systemIcon="ic_menu_delete" android.position="actionBar"/>
                </ActionItem>
            </ActionBar.actionItems>
        </ActionBar>
    </Page.ActionBar>
    <StackLayout orientation="vertical">
        <ListView items="{{lista_todos}}" itemTap="{{todoItemTap}}">
            <ListView.itemTemplate>
                  <Label text="{{nombre}}" class="listItem"/>
            </ListView.itemTemplate>
        </ListView>
    </StackLayout>
</Page>
